<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cl_AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="cl_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="cl_CommonTheme" parent="cl_AppBaseTheme">
        <item name="android:opacity">opaque</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="cl_ActivityDialogStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>

    <style name="cl_CommonDialog">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="cl_BottomDialogTheme">

    </style>

    <style name="cl_TagGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cl_atg_isAppendMode">false</item>
        <item name="cl_atg_inputHint">"Add Tag"</item>
        <item name="cl_atg_borderColor">#49C120</item>
        <item name="cl_atg_textColor">#49C120</item>
        <item name="cl_atg_backgroundColor">#FFFFFF</item>
        <item name="cl_atg_dashBorderColor">#AAAAAA</item>
        <item name="cl_atg_inputHintColor">#80000000</item>
        <item name="cl_atg_inputTextColor">#DE000000</item>
        <item name="cl_atg_checkedBorderColor">#49C120</item>
        <item name="cl_atg_checkedTextColor">#FFFFFF</item>
        <item name="cl_atg_checkedMarkerColor">#FFFFFF</item>
        <item name="cl_atg_checkedBackgroundColor">#49C120</item>
        <item name="cl_atg_pressedBackgroundColor">#EDEDED</item>
        <item name="cl_atg_borderStrokeWidth">0.5dp</item>
        <item name="cl_atg_textSize">13sp</item>
        <item name="cl_atg_horizontalSpacing">8dp</item>
        <item name="cl_atg_verticalSpacing">4dp</item>
        <item name="cl_atg_horizontalPadding">12dp</item>
        <item name="cl_atg_verticalPadding">3dp</item>
    </style>
</resources>